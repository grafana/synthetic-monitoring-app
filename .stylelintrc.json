{
  "extends": ["stylelint-config-standard"],
  "overrides": [
    {
      "files": ["**/*.{ts,tsx}"],
      "customSyntax": "postcss-styled-syntax"
    }
  ],
  "rules": {
    "color-named": "never",
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["label"]
      }
    ]
  }
}